def fact(n: int) -> int:
    """
    Возвращает фаткориал от числа n
    """
    if n <= 1:
        return 1
    return fact(n - 1) * n


def gcd(a: int, b: int) -> int:
    """
    Возвращает НОД (наибольший общий делитель чисел a и b, вычесленный по алгоритму Евклида)
    """
    if b == 0:
        return a
    return gcd(b, a % b)


